<%- include("partials/header.ejs") %>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input
      class="form-control"
      type="text"
      id="single-line-text"
      name="postTitle"
    />
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea
      id="multiline-text"
      name="postBody"
      rows="5"
      cols="30"
      class="form-control"
    ></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer.ejs") %>
